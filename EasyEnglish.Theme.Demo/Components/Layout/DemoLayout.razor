@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div style="display: flex; min-height: 100vh; background-color: #0F0F23; color: #F8FAFC; font-family: Arial, sans-serif;">

    <!-- Sidebar Navigation -->
    <aside style="width: 280px; background-color: #1E1F42; border-right: 1px solid #334155; overflow-y: auto;">
        <div style="padding: 24px;">
            <h3 style="color: #6366F1; margin-bottom: 24px;">🎨 Theme Demo</h3>

            <!-- Navigation Menu -->
            <nav>
                <div style="margin-bottom: 24px;">
                    <h4 style="font-size: 14px; color: #94A3B8; text-transform: uppercase; margin-bottom: 8px; font-weight: 600;">Overview</h4>
                    <ul style="list-style: none; padding: 0; margin: 0;">
                        <li style="margin-bottom: 4px;">
                            <a href="/" style="display: block; padding: 8px 16px; color: #CBD5E1; text-decoration: none; border-radius: 8px; transition: all 0.2s; @(GetNavClass("/"))"
                               onmouseover="this.style.backgroundColor='#252653'"
                               onmouseout="this.style.backgroundColor='@(IsActive("/") ? "#6366F1" : "transparent")'">
                                🏠 Home
                            </a>
                        </li>
                        <li style="margin-bottom: 4px;">
                            <a href="/colors" style="display: block; padding: 8px 16px; color: #CBD5E1; text-decoration: none; border-radius: 8px; transition: all 0.2s; @(GetNavClass("/colors"))"
                               onmouseover="this.style.backgroundColor='#252653'"
                               onmouseout="this.style.backgroundColor='@(IsActive("/colors") ? "#6366F1" : "transparent")'">
                                🎨 Colors
                            </a>
                        </li>
                        <li style="margin-bottom: 4px;">
                            <a href="/typography" style="display: block; padding: 8px 16px; color: #CBD5E1; text-decoration: none; border-radius: 8px; transition: all 0.2s; @(GetNavClass("/typography"))"
                               onmouseover="this.style.backgroundColor='#252653'"
                               onmouseout="this.style.backgroundColor='@(IsActive("/typography") ? "#6366F1" : "transparent")'">
                                📝 Typography
                            </a>
                        </li>
                        <li style="margin-bottom: 4px;">
                            <a href="/spacing" style="display: block; padding: 8px 16px; color: #CBD5E1; text-decoration: none; border-radius: 8px; transition: all 0.2s; @(GetNavClass("/spacing"))"
                               onmouseover="this.style.backgroundColor='#252653'"
                               onmouseout="this.style.backgroundColor='@(IsActive("/spacing") ? "#6366F1" : "transparent")'">
                                📐 Spacing
                            </a>
                        </li>
                    </ul>
                </div>

                <div style="margin-bottom: 24px;">
                    <h4 style="font-size: 14px; color: #94A3B8; text-transform: uppercase; margin-bottom: 8px; font-weight: 600;">Components</h4>
                    <ul style="list-style: none; padding: 0; margin: 0;">
                        <li style="margin-bottom: 4px;">
                            <a href="/themed-buttons" style="display: block; padding: 8px 16px; color: #CBD5E1; text-decoration: none; border-radius: 8px; transition: all 0.2s; @(GetNavClass("/themed-buttons"))"
                               onmouseover="this.style.backgroundColor='#252653'"
                               onmouseout="this.style.backgroundColor='@(IsActive("/themed-buttons") ? "#6366F1" : "transparent")'">
                                🔘 Button
                            </a>
                        </li>
                        <li style="margin-bottom: 4px;">
                            <a href="/components" style="display: block; padding: 8px 16px; color: #CBD5E1; text-decoration: none; border-radius: 8px; transition: all 0.2s; @(GetNavClass("/components"))"
                               onmouseover="this.style.backgroundColor='#252653'"
                               onmouseout="this.style.backgroundColor='@(IsActive("/components") ? "#6366F1" : "transparent")'">
                                🗃️ Card
                            </a>
                        </li>
                        <li style="margin-bottom: 4px;">
                            <a href="/components" style="display: block; padding: 8px 16px; color: #CBD5E1; text-decoration: none; border-radius: 8px; transition: all 0.2s; @(GetNavClass("/components"))"
                               onmouseover="this.style.backgroundColor='#252653'"
                               onmouseout="this.style.backgroundColor='@(IsActive("/components") ? "#6366F1" : "transparent")'">
                                📝 Input
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </aside>

    <!-- Main Content -->
    <main style="flex: 1; overflow-y: auto;">
        <div style="padding: 24px;">
            @Body
        </div>
    </main>
</div>

@code {
    private string GetNavClass(string path)
    {
        var currentPath = Navigation.ToBaseRelativePath(Navigation.Uri);
        return IsActive(path) ? "background-color: #6366F1; color: white;" : "";
    }

    private bool IsActive(string path)
    {
        var currentPath = Navigation.ToBaseRelativePath(Navigation.Uri);
        return currentPath == path.TrimStart('/');
    }
}