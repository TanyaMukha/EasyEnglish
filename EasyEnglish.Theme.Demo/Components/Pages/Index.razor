@page "/"
@using EasyEnglish.Theme.Components
@using EasyEnglish.Theme.Constants

<PageTitle>Theme Demo - Home</PageTitle>

<div class="@ThemeConstants.CssClasses.FlexColumn">
    <H1 CssClass="@ThemeConstants.CssClasses.Margin.BottomLg">
        Theme Component Library
    </H1>
    
    <p class="@ThemeConstants.CssClasses.BodyLarge @ThemeConstants.CssClasses.TextSecondary @ThemeConstants.CssClasses.Margin.BottomXl">
        Comprehensive showcase of all available components, colors, and utilities in the YourApp.Theme system.
    </p>

    <!-- Quick Overview Cards -->
    <div class="demo-grid">
        <Card Title="🎨 Colors" Size="CardSize.Large" 
              CssClass="demo-overview-card" 
              @onclick="@(() => Navigation.NavigateTo("/colors"))">
            <p class="@ThemeConstants.CssClasses.BodyMedium @ThemeConstants.CssClasses.Margin.BottomMd">
                Explore the complete color palette including semantic colors, language levels, and part-of-speech colors.
            </p>
            <Button Variant="ButtonVariant.Outline">View Colors</Button>
        </Card>

        <Card Title="📝 Typography" Size="CardSize.Large" 
              CssClass="demo-overview-card"
              @onclick="@(() => Navigation.NavigateTo("/typography"))">
            <p class="@ThemeConstants.CssClasses.BodyMedium @ThemeConstants.CssClasses.Margin.BottomMd">
                Typography system with headings, body text, and responsive font sizes.
            </p>
            <Button Variant="ButtonVariant.Outline">View Typography</Button>
        </Card>

        <Card Title="🧩 Components" Size="CardSize.Large" 
              CssClass="demo-overview-card"
              @onclick="@(() => Navigation.NavigateTo("/component/button"))">
            <p class="@ThemeConstants.CssClasses.BodyMedium @ThemeConstants.CssClasses.Margin.BottomMd">
                Interactive components including buttons, inputs, cards, badges, and more.
            </p>
            <Button Variant="ButtonVariant.Outline">View Components</Button>
        </Card>

        <Card Title="📐 Spacing" Size="CardSize.Large" 
              CssClass="demo-overview-card"
              @onclick="@(() => Navigation.NavigateTo("/spacing"))">
            <p class="@ThemeConstants.CssClasses.BodyMedium @ThemeConstants.CssClasses.Margin.BottomMd">
                8pt grid system with consistent spacing utilities for margins and padding.
            </p>
            <Button Variant="ButtonVariant.Outline">View Spacing</Button>
        </Card>
    </div>

    <!-- Feature Highlights -->
    <div class="@ThemeConstants.CssClasses.Margin.TopXl">
        <H2 CssClass="@ThemeConstants.CssClasses.Margin.BottomLg">
            Key Features
        </H2>
        
        <div class="feature-grid">
            <div class="feature-item">
                <div class="feature-icon">📱</div>
                <H4>Responsive Design</H4>
                <p class="@ThemeConstants.CssClasses.BodySmall @ThemeConstants.CssClasses.TextSecondary">
                    Automatic adaptation to mobile, tablet, and desktop screens with responsive utilities.
                </p>
            </div>
            
            <div class="feature-item">
                <div class="feature-icon">🎯</div>
                <H4>Language Learning</H4>
                <p class="@ThemeConstants.CssClasses.BodySmall @ThemeConstants.CssClasses.TextSecondary">
                    Specialized color system for language levels (A1-C2) and parts of speech.
                </p>
            </div>
            
            <div class="feature-item">
                <div class="feature-icon">⚡</div>
                <H4>Performance</H4>
                <p class="@ThemeConstants.CssClasses.BodySmall @ThemeConstants.CssClasses.TextSecondary">
                    CSS variables and optimized rendering for smooth performance across platforms.
                </p>
            </div>
            
            <div class="feature-item">
                <div class="feature-icon">🔧</div>
                <H4>Customizable</H4>
                <p class="@ThemeConstants.CssClasses.BodySmall @ThemeConstants.CssClasses.TextSecondary">
                    Easy customization through configuration options and CSS variable overrides.
                </p>
            </div>
        </div>
    </div>

    <!-- Quick Examples -->
    <div class="@ThemeConstants.CssClasses.Margin.TopXl">
        <H2 CssClass="@ThemeConstants.CssClasses.Margin.BottomLg">
            Quick Examples
        </H2>
        
        <Card Title="Button Variants" CssClass="@ThemeConstants.CssClasses.Margin.BottomLg">
            <div class="@ThemeConstants.CssClasses.FlexRow @ThemeConstants.CssClasses.FlexWrap" style="gap: var(--spacing-sm);">
                <Button Variant="ButtonVariant.Primary">Primary</Button>
                <Button Variant="ButtonVariant.Secondary">Secondary</Button>
                <Button Variant="ButtonVariant.Accent">Accent</Button>
                <Button Variant="ButtonVariant.Success">Success</Button>
                <Button Variant="ButtonVariant.Outline">Outline</Button>
            </div>
        </Card>

        <Card Title="Language Level Badges">
            <div class="@ThemeConstants.CssClasses.FlexRow @ThemeConstants.CssClasses.FlexWrap" style="gap: var(--spacing-sm);">
                <Badge Variant="BadgeVariant.Level" Level="A1">A1 Beginner</Badge>
                <Badge Variant="BadgeVariant.Level" Level="A2">A2 Elementary</Badge>
                <Badge Variant="BadgeVariant.Level" Level="B1">B1 Intermediate</Badge>
                <Badge Variant="BadgeVariant.Level" Level="B2">B2 Upper-Inter</Badge>
                <Badge Variant="BadgeVariant.Level" Level="C1">C1 Advanced</Badge>
                <Badge Variant="BadgeVariant.Level" Level="C2">C2 Proficient</Badge>
            </div>
        </Card>
    </div>
</div>

<style>
.demo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
}

.demo-overview-card {
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.demo-overview-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
}

.feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-lg);
}

.feature-item {
    text-align: center;
    padding: var(--spacing-lg);
}

.feature-icon {
    font-size: 48px;
    margin-bottom: var(--spacing-md);
}
</style>

@inject NavigationManager Navigation