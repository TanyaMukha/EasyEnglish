@page "/spacing"
@using EasyEnglish.Theme.Components
@using EasyEnglish.Theme.Constants

<PageTitle>Spacing - Theme Demo</PageTitle>

<Container>
    <H1 CssClass="@ThemeConstants.CssClasses.Margin.BottomLg">
        Spacing System
    </H1>

    <p class="@ThemeConstants.CssClasses.BodyLarge @ThemeConstants.CssClasses.TextSecondary @ThemeConstants.CssClasses.Margin.BottomXl">
        8-point grid system providing consistent spacing throughout the application.
    </p>

    <!-- Spacing Scale -->
    <Card Title="Spacing Scale" CssClass="@ThemeConstants.CssClasses.Margin.BottomXl">
        <div class="spacing-examples">
            <div class="spacing-example">
                <div class="spacing-visual" style="height: 4px;"></div>
                <div class="spacing-info">
                    <div class="spacing-name">XS (Extra Small)</div>
                    <div class="spacing-value">4px</div>
                    <div class="spacing-usage">Used for: Component internal spacing, icon gaps</div>
                </div>
            </div>

            <div class="spacing-example">
                <div class="spacing-visual" style="height: 8px;"></div>
                <div class="spacing-info">
                    <div class="spacing-name">SM (Small)</div>
                    <div class="spacing-value">8px</div>
                    <div class="spacing-usage">Used for: Button padding, form field spacing</div>
                </div>
            </div>

            <div class="spacing-example">
                <div class="spacing-visual" style="height: 16px;"></div>
                <div class="spacing-info">
                    <div class="spacing-name">MD (Medium)</div>
                    <div class="spacing-value">16px</div>
                    <div class="spacing-usage">Used for: Card padding, component gaps</div>
                </div>
            </div>

            <div class="spacing-example">
                <div class="spacing-visual" style="height: 24px;"></div>
                <div class="spacing-info">
                    <div class="spacing-name">LG (Large)</div>
                    <div class="spacing-value">24px</div>
                    <div class="spacing-usage">Used for: Section spacing, layout gaps</div>
                </div>
            </div>

            <div class="spacing-example">
                <div class="spacing-visual" style="height: 32px;"></div>
                <div class="spacing-info">
                    <div class="spacing-name">XL (Extra Large)</div>
                    <div class="spacing-value">32px</div>
                    <div class="spacing-usage">Used for: Major section separation</div>
                </div>
            </div>

            <div class="spacing-example">
                <div class="spacing-visual" style="height: 48px;"></div>
                <div class="spacing-info">
                    <div class="spacing-name">XXL (Double Extra Large)</div>
                    <div class="spacing-value">48px</div>
                    <div class="spacing-usage">Used for: Page section breaks</div>
                </div>
            </div>
        </div>
    </Card>

    <!-- Margin Utilities -->
    <Card Title="Margin Utilities" CssClass="@ThemeConstants.CssClasses.Margin.BottomXl">
        <p class="@ThemeConstants.CssClasses.BodyMedium @ThemeConstants.CssClasses.Margin.BottomMd">
            Apply consistent margins using utility classes:
        </p>

        <div class="utility-examples">
            <div class="utility-example">
                <code>@ThemeConstants.CssClasses.Margin.BottomSm</code>
                <span>margin-bottom: 8px</span>
            </div>
            <div class="utility-example">
                <code>@ThemeConstants.CssClasses.Margin.TopMd</code>
                <span>margin-top: 16px</span>
            </div>
            <div class="utility-example">
                <code>@ThemeConstants.CssClasses.Margin.HorizontalLg</code>
                <span>margin-left & margin-right: 24px</span>
            </div>
            <div class="utility-example">
                <code>@ThemeConstants.CssClasses.Margin.VerticalXl</code>
                <span>margin-top & margin-bottom: 32px</span>
            </div>
        </div>
    </Card>

    <!-- Padding Utilities -->
    <Card Title="Padding Utilities">
        <p class="@ThemeConstants.CssClasses.BodyMedium @ThemeConstants.CssClasses.Margin.BottomMd">
            Apply consistent padding using utility classes:
        </p>

        <div class="utility-examples">
            <div class="utility-example">
                <code>@ThemeConstants.CssClasses.Padding.Sm</code>
                <span>padding: 8px</span>
            </div>
            <div class="utility-example">
                <code>@ThemeConstants.CssClasses.Padding.HorizontalMd</code>
                <span>padding-left & padding-right: 16px</span>
            </div>
            <div class="utility-example">
                <code>@ThemeConstants.CssClasses.Padding.VerticalLg</code>
                <span>padding-top & padding-bottom: 24px</span>
            </div>
            <div class="utility-example">
                <code>@ThemeConstants.CssClasses.Padding.Xl</code>
                <span>padding: 32px</span>
            </div>
        </div>
    </Card>
</Container>

<style>
    .spacing-examples {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-lg);
    }

    .spacing-example {
        display: flex;
        align-items: center;
        padding: var(--spacing-md);
        border: 1px solid var(--color-border);
        border-radius: var(--border-radius-md);
        background-color: var(--color-background);
    }

    .spacing-visual {
        width: 120px;
        background-color: var(--color-primary);
        border-radius: var(--border-radius-sm);
        margin-right: var(--spacing-lg);
        flex-shrink: 0;
    }

    .spacing-info {
        flex: 1;
    }

    .spacing-name {
        font-weight: var(--font-weight-semibold);
        color: var(--color-text-primary);
        margin-bottom: var(--spacing-xs);
    }

    .spacing-value {
        font-family: 'Courier New', Consolas, monospace;
        color: var(--color-accent);
        font-size: var(--font-size-sm);
        margin-bottom: var(--spacing-xs);
    }

    .spacing-usage {
        font-size: var(--font-size-sm);
        color: var(--color-text-secondary);
    }

    .utility-examples {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: var(--spacing-md);
    }

    .utility-example {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: var(--spacing-md);
        background-color: var(--color-background-secondary);
        border-radius: var(--border-radius-md);
        border: 1px solid var(--color-border);
    }

        .utility-example code {
            font-family: 'Courier New', Consolas, monospace;
            background-color: var(--color-surface);
            padding: var(--spacing-xs) var(--spacing-sm);
            border-radius: var(--border-radius-sm);
            color: var(--color-accent);
            font-size: var(--font-size-sm);
        }

        .utility-example span {
            color: var(--color-text-secondary);
            font-size: var(--font-size-sm);
        }
</style>